{
    "version": 2,
    "builds": [
      { "src": "server.js", "use": "@vercel/node" }
    ],
    "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    }
    ],
    
      "headers": [
        {
          "source": "/(.*)",
          "headers": [
            {
              "key": "Access-Control-Allow-Origin",
              "value": "https://file-upload-client-side.vercel.app"
            },
            {
              "key": "Access-Control-Allow-Methods",
              "value": "GET, POST, PUT, DELETE"
            }
          ]
        }
      ]
    }
    
  
  